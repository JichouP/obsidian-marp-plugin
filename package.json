		"@typescript-eslint/eslint-plugin": "6.6.0",
		"@typescript-eslint/parser": "6.7.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.19.3",
		"obsidian": "latest",
		"prettier": "^3.0.3",
		"tslib": "2.6.2",
		"typescript": "5.2.2"
	},
	"dependencies": {
		"@marp-team/marp-core": "^3.8.1",
